@model IEnumerable<Final02.Models.Format>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h4 class="my-4">Match Formats List</h4>

    <div class="mb-3">
        <a class="btn btn-primary" asp-action="Create">Add Match Formats</a>
    </div>

    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>

                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>@Html.DisplayFor(x => item.FormatName)</td>

                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.FormatId">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.FormatId">Delete</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>