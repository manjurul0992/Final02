@model Final02.Models.Format

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Add Match Formats</h1>
<div class="container">
    <form asp-action="Create" asp-controller="Formats" method="post">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="form-group">
                    <label for="FormatName" class="custom-label">Match Format</label>
                    <input asp-for="FormatName" class="form-control" id="FormatName" />
                    <span asp-validation-for="FormatName" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-lg btn-block">Save</button>
            </div>
        </div>
    </form>
</div>
